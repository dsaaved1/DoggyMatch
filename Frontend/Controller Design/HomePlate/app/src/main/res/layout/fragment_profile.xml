<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/profileDescription"
        android:layout_width="363dp"
        android:layout_height="100dp"
        android:layout_below="@+id/profileName"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/myProfilePicture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/customTitle4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:backgroundTint="#FFB783"
        app:srcCompat="@drawable/icon_profile_24" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myProfilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/customTitle4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-20dp"
        android:background="#FFB783"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/avbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/doggymatchalphatitle" />

    <Button
        android:id="@+id/signOutButtonProfile"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="70dp"
        android:background="#FFFFFF"
        android:text="Sign Out"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/preferenceButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/myProfilePicture"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_baseline_settings_24"
        android:backgroundTint="@color/black" />

</RelativeLayout>